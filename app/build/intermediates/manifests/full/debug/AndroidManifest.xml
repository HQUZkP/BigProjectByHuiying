<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaipingzhou.mindcloud"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <!-- 联网权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 读写磁盘的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 拍照权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar" >

        <!-- 多分辨率的支持 -->
        <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true" />

        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.GuideActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.LoginActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.RigisterActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.MainActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.PersonalActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.UpdatePsdActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.SelectPictureActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.CropImageActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.AnsOnlineActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.controller.activity.BreakActivity" />
        <activity android:name="com.kaipingzhou.mindcloud.game2048.Game2048Activity" />
        <activity android:name="com.kaipingzhou.mindcloud.gamesokoban.GameTXZActivity" />
    </application>

</manifest>