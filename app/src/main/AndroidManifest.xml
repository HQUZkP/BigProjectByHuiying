<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaipingzhou.mindcloud">

    <!--联网权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--读写磁盘的权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--拍照权限-->
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar">

        <!--多分辨率的支持-->
        <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true" />

        <activity android:name=".controller.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.activity.GuideActivity" />
        <activity android:name=".controller.activity.LoginActivity" />
        <activity android:name=".controller.activity.RigisterActivity" />
        <activity android:name=".controller.activity.MainActivity" />
        <activity android:name=".controller.activity.PersonalActivity" />
        <activity android:name=".controller.activity.UpdatePsdActivity" />
        <activity android:name=".controller.activity.SelectPictureActivity" />
        <activity android:name=".controller.activity.CropImageActivity" />
        <activity android:name=".controller.activity.AnsOnlineActivity" />
        <activity android:name=".controller.activity.BreakActivity" />
        <activity android:name=".game2048.Game2048Activity" />
        <activity android:name=".gamesokoban.GameTXZActivity" />

    </application>

</manifest>